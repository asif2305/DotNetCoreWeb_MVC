@model Product
<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Edit Product</h2>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3">
				<div asp-validation-summary="All"></div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Title"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
					<label class="ms-2" asp-for="Description"></label>

				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ISBN"></label>
					
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Author"></label>
					
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ListPrice"></label>				
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price"></label>			
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price50"></label>
					
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price100"></label>
				
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>

	</div>
</div>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
 }